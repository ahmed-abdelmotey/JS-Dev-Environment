{
  "name": "JS-Dev-Environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "prestart": "babel-node _buildScripts/startMessage.js",
    "start": "npm-run-all --parallel start:src start:mock-api lint:watch test:watch ",
    "start:src": "babel-node _buildScripts/srcServer.js",
    "local-tunnel": "lt --port 3000 --subdomain mo3ty",
    "share": "npm-run-all --parallel start:src local-tunnel",
    "lint": "esw webpack.config.* _buildScripts src --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress _buildScripts/testSetup.js \"src/**/*.spec.js\"",
    "test:watch": "npm test -- --watch",
    "generate-mock-data": "babel-node _buildScripts/generateMockData.js",
    "prestart:mock-api": "npm run generate-mock-data",
    "start:mock-api": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node _buildScripts/build.js --trace-deprecation",
    "start:dist-server": "babel-node _buildScripts/distServer.js",
		"postbuild": "npm-run-all -p start:mock-api start:dist-server",
		"deploy": "surge ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmed-abdelmotey/JS-Dev-Environment.git"
  },
  "keywords": [],
  "author": "Ahmed Abdelmotey",
  "license": "MIT",
  "homepage": "https://github.com/ahmed-abdelmotey/JS-Dev-Environment#readme",
  "dependencies": {
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.24.5",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.2",
    "connect-browser-sync": "^2.1.0",
    "cors": "^2.8.4",
    "css-loader": "^1.0.0",
    "eslint": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-watch": "^4.0.1",
    "express": "^4.16.3",
    "extract-css-chunks-webpack-plugin": "^3.0.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^11.11.0",
    "json-schema-faker": "^0.5.0-rc15",
    "json-server": "^0.14.0",
    "localtunnel": "^1.9.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "nock": "^9.4.2",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.3",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "surge": "^0.20.1",
    "webpack": "^4.16.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2"
  }
}
